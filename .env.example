# Microflow Configuration
MICROFLOW_DATA_DIR=./data
MICROFLOW_LOG_LEVEL=INFO
MICROFLOW_API_HOST=127.0.0.1
MICROFLOW_API_PORT=8000

# Workflow Engine Settings
MICROFLOW_MAX_CONCURRENT_WORKFLOWS=10
MICROFLOW_DEFAULT_TASK_TIMEOUT=300
MICROFLOW_RETRY_BACKOFF_FACTOR=2.0

# Optional: External Services
# REDIS_URL=redis://localhost:6379
# WEBHOOK_BASE_URL=http://localhost:8000

# Local integration dependencies (docker-compose)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_TEST_BUCKET=microflow-dev

REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

POSTGRES_PORT=5432
POSTGRES_DB=microflow
POSTGRES_USER=microflow
POSTGRES_PASSWORD=microflow
DATABASE_URL=postgresql://microflow:microflow@localhost:5432/microflow

# ArangoDB defaults for AQL node
ARANGO_URL=http://localhost:8529
ARANGO_DATABASE=_system
ARANGO_USERNAME=root
ARANGO_PASSWORD=
